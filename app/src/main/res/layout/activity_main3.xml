<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">



    <EditText
        android:fontFamily="@font/raleway"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/imageviewround"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_search_24"
        android:background="@drawable/edittextbackground"
        android:id="@+id/edittextsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        ></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available orders"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        ></TextView>





    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="9dp"
            android:padding="20dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="9dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:src="@drawable/rasm1"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        ></TextView>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:src="@drawable/rasm2"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        ></TextView>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:src="@drawable/rasm3"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        ></TextView>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:src="@drawable/rasm4"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        ></TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaran"
        ></TextView>


    <ScrollView
            android:layout_width="match_parent"
            android:elevation="9dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="9dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:src="@drawable/rasm1"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        ></TextView>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:src="@drawable/rasm2"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        ></TextView>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:src="@drawable/rasm3"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        ></TextView>
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:src="@drawable/rasm4"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        ></TextView>
                </LinearLayout>




            </androidx.cardview.widget.CardView>



        </ScrollView>



</LinearLayout>